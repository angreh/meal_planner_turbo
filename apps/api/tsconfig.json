{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    // "typeRoots": [
    //   "src/@types"
    // ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
