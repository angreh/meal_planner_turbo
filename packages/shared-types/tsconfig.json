{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".turbo"]
}
